<% content_for :title, t('.title') %>

<% content_for :actions do %>
  <%= link_to icon(:plus), new_observable_category_path, class: "btn btn-primary" %>
<% end %>

<div class="row">
	<div class="col-md-12">
		<% if @observable_categories.present? %>
		<div class="table-responsive">
			<table class="table table-striped">
				<thead>
					<tr>
						<th><%= GoalCategory.human_attribute_name(:name) %> </th>
						<th><%= GoalCategory.human_attribute_name(:observables) %> </th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @observable_categories.each do |observable_category| %>
					<tr>
						<td><%= observable_category.name %></td>
						<td><%= observable_category.observables.count %></td>
						<td>
							<%= link_to edit_observable_category_path(observable_category) do %>
							<i class="fa fa-edit fa-fw"></i>
							<% end %>
							<%= link_to observable_category_path(observable_category), method: :delete, data: { confirm: "Etes vous sÃ»r ?" } do %>
							<i class="fa fa-trash-o fa-fw"></i>
							<% end %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<% end %>
	</div>
</div>

<%= paginate @observable_categories %>
