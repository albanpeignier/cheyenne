<% content_for :title, "Projets" %>

<% content_for :actions do %>
  <%= link_to icon(:plus), new_project_path, class: "btn btn-primary" %>
<% end %>

<div class="row">
	<div class=".col-md-8">
		<% if @projects.present? %>
		<div class="table-responsive">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Client</th>
						<th>Début</th>
						<th>Fin</th>
						<th>Objectifs</th>
						<th>Observations</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @projects.each do |project| %>
					<tr>
						<td><%= project.customer.try :name %></td>
						<td><%= l project.begin %></td>
						<td><%= l project.end %></td>
						<td><%= project.goals.count %></td>
						<td><%= project.observables.count %></td>
						<td>
							<%= link_to project_path(project) do %>
							<i class="fa fa-eye fa-fw"></i>
							<% end %>
							<%= link_to edit_project_path(project) do %>
							<i class="fa fa-edit fa-fw"></i>
							<% end %>
							<%= link_to project_path(project), method: :delete, data: { confirm: "Etes vous sûr ?" } do %>
							<i class="fa fa-trash-o fa-fw"></i>
							<% end %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<% end %>
	</div>
</div>

<%= paginate @projects %>
