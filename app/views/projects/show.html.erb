<% content_for :title, t('.title', name: @project.customer.name) %>

<p><label>Client:</label> <%= link_to @project.customer.name, @project.customer %></p>

<p>Du <%= l @project.begin %> au <%= l @project.end %></p>

<p><label>Séances associées:</label> <%= link_to_if @project.seances.present?, pluralize(@project.seances.count, "séance", "séances"), project_seances_path(@project.id) %></p>

<h3>Objectifs</h3>

<div class="row">
	<div class="col-md-8">
		<% if @project.goals.present? %>
		<div class="table-responsive">
			<table id="goals_table" class="table table-striped">
				<thead>
					<tr>
						<th><%= t('.goals_table.goal') %></th>
						<th><%= t('.goals_table.first_note') %></th>
						<th><%= t('.goals_table.second_note') %></th>
						<th><%= t('.goals_table.third_note') %></th>
						<th><%= t('.goals_table.note') %></th>
					</tr>
				</thead>
				<tbody>
					<% @project.goals.each do |goal| %>
					<tr>
						<td><%= goal.name %></td>
						<td class="note"><%= number_with_precision(@project.notes_part(1).fetch(goal, '-'), precision: 1) %></td>
						<td class="note"><%= number_with_precision(@project.notes_part(2).fetch(goal, '-'), precision: 1) %></td>
						<td class="note"><%= number_with_precision(@project.notes_part(3).fetch(goal, '-'), precision: 1) %></td>
						<td class="note"><%= number_with_precision(@project.notes.fetch(goal, '-'), precision: 1) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<% end %>
	</div>
	<% if @project.notes.present? %>
	<div class="col-md-4">
		<canvas id="radar"></canvas>
	</div>
	<%= javascript_tag do %>
 data = {
    labels: <%= @project.notes.keys.map { |g| truncate(g.name, length: 10) }.to_json.html_safe %>,
    datasets: [
        {
            label: "Moyenne",
            backgroundColor: "rgba(179,181,198,0.2)",
            borderColor: "rgba(179,181,198,1)",
            pointBackgroundColor: "rgba(179,181,198,1)",
            pointBorderColor: "#fff",
            pointHoverBackgroundColor: "#fff",
            pointHoverBorderColor: "rgba(179,181,198,1)",
            data: <%= @project.notes.values.to_json.html_safe %>
        },
        {
            label: "1/3",
            backgroundColor: "rgba(170, 57, 57,0.2)",
            borderColor: "rgba(170,57,57,1)",
            pointBackgroundColor: "rgba(170,57,57,1)",
            pointBorderColor: "#fff",
            pointHoverBackgroundColor: "#fff",
            pointHoverBorderColor: "rgba(170,57,57,1)",
            data: <%= @project.notes_part(1).values.to_json.html_safe %>
        },
        {
            label: "2/3",
            backgroundColor: "rgba(34,102,102,0.2)",
            borderColor: "rgba(34,102,102,1)",
            pointBackgroundColor: "rgba(34,102,102,1)",
            pointBorderColor: "#fff",
            pointHoverBackgroundColor: "#fff",
            pointHoverBorderColor: "rgba(34,102,102,1)",
            data: <%= @project.notes_part(2).values.to_json.html_safe %>
        },
        {
            label: "3/3",
            backgroundColor: "rgba(122,159,53,0.2)",
            borderColor: "rgba(122,159,53,1)",
            pointBackgroundColor: "rgba(122,159,53,1)",
            pointBorderColor: "#fff",
            pointHoverBackgroundColor: "#fff",
            pointHoverBorderColor: "rgba(122,159,53,1)",
            data: <%= @project.notes_part(3).values.to_json.html_safe %>
        },
      ]
	  };

	options = {
            scale: {
                ticks: {
                    beginAtZero: true
                }
            }
  };

	  new Chart($('#radar'), {
      type: 'radar',
      data: data,
      options: options
		});
	<% end %>
	<% end %>
</div>

<div class="row">
	<div class="col-md-12">
		<canvas id="seances_notes"></canvas>

	<%= javascript_tag do %>
 data = {
    labels: <%= (["-"] * @project.seances.count).to_json.html_safe %>,
    datasets: [
    <% @project.goals.each do |goal| %>
      <% color = 3.times.map { rand(255) }.join(',') %>
        {
            label: <%= goal.name.to_json.html_safe %>,
            borderColor: "rgba(<%= color %>,1)",
            fill: false,
            data: <%= @project.all_notes(goal).to_json.html_safe %>
        },
     <% end %>
    ]
  };

	options = {
            scale: {
                ticks: {
                    beginAtZero: true
                }
            }
  };

	  new Chart($('#seances_notes'), {
      type: 'line',
      data: data,
      options: options
		});
	<% end %>

  </div>
</div>

<h3><%= Observable.model_name.human.pluralize %></h3>

<div class="row">
	<div class="col-md-12">
		<% if @project.observables.present? %>
		<div class="table-responsive">
			<table id="project_observables" class="table table-striped">
				<tbody>
					<% @project.project_observables.includes(:observable).each do |project_observable| %>
					<tr id="project_observable_<%= project_observable.id %>" class="project_observable <%= 'ignored' if project_observable.ignored? %>">
						<td class="name"><%= project_observable.observable.name %></td>
						<td>
							<%= link_to project_toogle_observable_path(@project), data: { remote: true, params: "project_observable_id=#{project_observable.id}" }, method: :put do %>
							<i class="action include fa fa-plus fa-fw"></i>
							<i class="action exclude fa fa-ban fa-fw"></i>
							<% end %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<% end %>
	</div>
</div>

<%= link_to t('actions.edit'), edit_project_path(@project), class: "btn btn-primary" %>
<%= link_to t('actions.delete'), project_path(@project), class: "btn btn-default", method: :delete, data: { confirm: "Etes vous sûr ?" }%>
