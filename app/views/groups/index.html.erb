<% content_for :title, t('.title') %>

<% content_for :actions do %>
  <%= link_to icon(:plus), new_group_path, class: "btn btn-primary" %>
<% end %>

<%= search_form %>

<div class="row">
	<div class="col-md-12">
		<% if @groups.present? %>
		<div class="table-responsive">
			<table class="table table-striped">
				<thead>
					<tr>
						<th><%= Group.human_attribute_name(:name) %></th>
						<th><%= Group.human_attribute_name(:size) %></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @groups.each do |group| %>
					<tr>
						<td><%= group.name %></td>
						<td><%= group.size %></td>
						<td>
							<%= link_to group_path(group) do %>
							<i class="fa fa-eye fa-fw"></i>
							<% end %>
							<%= link_to edit_group_path(group) do %>
							<i class="fa fa-edit fa-fw"></i>
							<% end %>
							<%= link_to group_path(group), method: :delete, data: { confirm: "Etes vous sÃ»r ?" } do %>
							<i class="fa fa-trash-o fa-fw"></i>
							<% end %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<% end %>
	</div>
</div>

<%= paginate @groups %>
