<% content_for :title, t('.title', begin: l(@seance.begin, format: :short)) %>

<div class="row">
	<div class="col-md-12">
		<p><%= l @seance.begin %></p>
		<p><%= l @seance.end %></p>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<h3>Participants</h3>
		<% if @seance.customers.present? %>
		<div class="table-responsive">
			<table class="table table-striped">
				<tbody>
					<% @seance.seance_customers.each do |seance_customer| %>
					<tr>
						<td><%= seance_customer.customer.name %></td>
						<td>
							<% if seance_customer.observables.present? %>
  						  <%= seance_customer.observables.evaluated.count %> / <%= seance_customer.observables.count %>
							<% else %>
								Hors projet
							<% end %>
						</td>
						<td>
							<%= link_to seance_seance_customer_path(@seance, seance_customer) do %>
							<i class="fa fa-eye fa-fw"></i>
							<% end %>
							<% if seance_customer.project %>
  							<%= link_to seance_customer.project do %>
	    						<i class="fa fa-list fa-fw"></i>
			   				<% end %>
							<% end %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<h3><%= Group.model_name.human.pluralize %></h3>
		<% if @seance.groups.present? %>
		<div class="table-responsive">
			<table class="table table-striped">
				<tbody>
					<% @seance.seance_groups.each do |seance_group| %>
					<tr>
						<td><%= seance_group.group.name %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<h3>Encadrants</h3>

		<ul>
			<% @seance.users.each do |user| %>
			<li><%= user.name %></li>
			<% end %>
		</ul>
	</div>
</div>

<%= link_to t('actions.edit'), edit_seance_path(@seance), class: "btn btn-primary" %>
<%= link_to t('actions.delete'), seance_path(@seance), class: "btn btn-default", method: :delete, data: { confirm: "Etes vous sÃ»r ?" }%>
