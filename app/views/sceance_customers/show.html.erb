<% content_for :title, "SÃ©ance de #{@sceance_customer.customer.name}" %>

<div class="row">
	<div class="col-md-12">
		<% if @sceance_customer.project %>
  		Projet du <%= l @sceance_customer.project.begin %> au <%= l @sceance_customer.project.end %></p>
		<% else %>
  		Hors projet
		<% end %>
	</div>
</div>

<% if @sceance_customer.observables.present? %>
<h3><%= Observable.model_name.human.pluralize %></h3>

<div class="row">
	<div class="col-md-12">
		<div class="table-responsive">
			<table id="project_observables" class="table table-striped">
				<tbody>
					<% @sceance_customer.observables.each do |sceance_observable| %>
					<tr id="sceance_observable_<%= sceance_observable.id %>" class="sceance_observable noted-<%= sceance_customer_observable_note_label(sceance_observable) %>">
						<td class="name"><%= sceance_observable.observable.name %></td>
						<td class="note">
							<% sceance_observable.observable.candidates.each do |candidate| %>
							  <span class="note-<%= sceance_customer_observable_note_label(candidate) %>">
  								<%= link_to_note_sceance_customer_observable sceance_observable, candidate %>
								</span>
							<% end %>
							<span class="note-<%= sceance_customer_observable_note_label(-1) %>">
								<%= link_to_note_sceance_customer_observable sceance_observable, -1, '>>' %>
							</span>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<% end %>

<%= link_to "Retour", @sceance_customer.sceance %>
